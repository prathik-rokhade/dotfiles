[user]
  name = John Skilbeck
  email = john.skilbeck@gmail.com
  signingKey = 08A53423EDB87FA3
[core]
  editor = vim
  excludesfile = ~/.gitignore
[color]
  ui = always
[log]
  date=short
[push]
  default=current
[diff]
  tool = vimdiff
[push]
  default = simple
[alias]
  # admin
  br = branch
  branches = branch -a --color -v
  ck = checkout
  l = log --graph --decorate --oneline
  purge = fetch --all --prune
  s = status -sb
  vimdiff=difftool -y -t vimdiff -R

  # stage
  addp = add --patch

  # commit
  cm = commit
  commit = commit
  label = tag -a
  pu = push
  tag = tag -n
  tag-release = !sh -c 'git tag release/`date +%Y/%m/%d/%H%M`'

  # undo
  ammend = commit --ammend -C HEAD
  undo = reset --soft HEAD^
  unstage = reset HEAD --
[commit]
  gpgsign = true
[pager]
  branch = false
[gpg]
  program = gpg
