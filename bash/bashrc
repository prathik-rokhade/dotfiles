#!/usr/bin/env bash
# -- docs -------------------------------------------------------
# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples
# colors:$ for i in $(seq 0 7); do tput setaf $i && echo "$i - color"; done

if [[ $- == *i* ]]; then
  black="\[$(tput setaf 0)\]"
  red="\[$(tput setaf 1)\]"
  green="\[$(tput setaf 2)\]"
  yellow="\[$(tput setaf 3)\]"
  blue="\[$(tput setaf 4)\]"
  pink="\[$(tput setaf 5)\]"
  teal="\[$(tput setaf 6)\]"
  grey="\[$(tput setaf 7)\]"
  off="\[$(tput sgr0)\]"
fi

# -- path, command prompt ---------------------------------------
export PS1="${red}@\h${off}:${yellow}\W ${off}$ "
#export PS1="${red}@\h${off}:${blue}\W ${off}$ "
#export PS1='\h:\W $ '
#export PS1='\[\033[01;32m\]\h\[\033[00m\]:\[\033[01;34m\]\W\[\033[00m\] $ '
#export PS1='\[\033[01;32m\]\h\[\033[00m\]:\W $ '
#PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w \$\[\033[00m\] '
#export PS1='[\u@\h \W]\$ '
#export PS1="\W Î» "

# -- computer-specific stuffs -----------------------------------
# Work specific pem keys (place pem keys in ~/.ssh
work() {
  for file in $(ls ~/.ssh/*.pem); do
    ssh-add $file > /dev/null 2>&1;
  done
}

computer_specific() {
  case $(whoami) in
    ('john.skilbeck') work;;
    (skilbjo) ;;
  esac
}

computer_specific

