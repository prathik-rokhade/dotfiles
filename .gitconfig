[user]
	name = John Skilbeck
	email = john.skilbeck@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
[color]
	ui = always
[diff]
	tool = vimdiff
[push]
	default = simple
[alias]
	c = commit
	ck = checkout
	dl = difftool HEAD~ HEAD
	dt = difftool
	s = status
	mt = mergetool
	tg = tag -n
	ws = rebase --whitespace=fix
